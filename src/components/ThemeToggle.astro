  <div class="flex items-center">
    <span class="fun-label leading-none" style="font-family: 'Source Sans Pro', sans-serif;">Business mode</span>
    <span class="business-label hidden leading-none" style="font-family: 'Indie Flower', cursive !important; font-size: 1.1em;">Fun mode</span>
  </div>
</button>

<script>
  import { isFunTheme } from '../store/theme'

  const toggle = document.getElementById('theme-toggle')
  const funMode = toggle?.querySelector('.fun-mode')
  const businessMode = toggle?.querySelector('.business-mode')
  const funLabel = toggle?.querySelector('.fun-label')
  const businessLabel = toggle?.querySelector('.business-label')

  isFunTheme.subscribe(isFun => {
    document.body.classList.toggle('business-theme', !isFun)
    funMode?.classList.toggle('hidden', !isFun)
    businessMode?.classList.toggle('hidden', isFun)
    funLabel?.classList.toggle('hidden', !isFun)
    businessLabel?.classList.toggle('hidden', isFun)
  })

  toggle?.addEventListener('click', () => {
    isFunTheme.set(!isFunTheme.get())
  })
</script> 