---
interface TechCategory {
  title: string
  items: string[]
}

const techStack: TechCategory[] = [
  {
    title: 'Core Technologies',
    items: ['JavaScript/TypeScript', 'Python', 'Go', 'Java', 'HTML5', 'CSS3']
  },
  {
    title: 'Frontend',
    items: ['React', 'Next.js', 'Svelte', 'Angular']
  },
  {
    title: 'Backend & APIs',
    items: ['Node.js', 'Django', 'REST', 'GraphQL', 'Microservices']
  },
  {
    title: 'Cloud & Infrastructure',
    items: ['AWS', 'GCP', 'Terraform', 'Docker', 'Kubernetes', 'Linux']
  },
  {
    title: 'CI/CD & DevOps',
    items: ['Jenkins', 'Ansible', 'Bazel', 'GitHub Actions']
  },
  {
    title: 'Data Storage',
    items: ['PostgreSQL', 'MySQL', 'BigQuery', 'SQL']
  },
  {
    title: 'Development Tools',
    items: ['Git', 'Jest', 'Vitest', 'npm', 'yarn', 'pnpm']
  },
  {
    title: 'Project Management',
    items: ['JIRA', 'Confluence', 'Notion', 'Agile', 'Scrum']
  }
]
---

<div class="text-sm">
  {
    techStack.map(category => (
      <div class="mb-3">
        <h3 class="font-bold mb-1">{category.title}:</h3>
        <p class="text-gray-700">{category.items.join(', ')}</p>
      </div>
    ))
  }
</div> 