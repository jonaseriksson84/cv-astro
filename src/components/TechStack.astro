---
interface TechCategory {
  title: string
  items: string[]
}

const techStack: TechCategory[] = [
  {
    title: 'Languages',
    items: ['JavaScript/TypeScript', 'Python', 'Go', 'Java', 'HTML5', 'CSS3']
  },
  {
    title: 'Frontend & Frameworks',
    items: ['React', 'Next.js', 'Angular', 'Node.js', 'Django']
  },
  {
    title: 'Cloud & Infrastructure',
    items: ['AWS', 'GCP', 'Docker', 'Kubernetes', 'Terraform', 'Linux']
  },
  {
    title: 'Data & APIs',
    items: ['PostgreSQL', 'MySQL', 'BigQuery', 'GraphQL', 'REST']
  },
  {
    title: 'Development Tools',
    items: ['Git', 'Jest/Vitest', 'Bazel', 'JIRA', 'Confluence', 'Notion']
  }
]
---

<div class="text-sm">
  {
    techStack.map(category => (
      <div class="mb-3">
        <h4 class="font-bold mb-1">{category.title}:</h4>
        <p class="text-gray-700">{category.items.join(', ')}</p>
      </div>
    ))
  }
</div> 