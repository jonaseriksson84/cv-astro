---
interface Education {
  degree: string
  institution: string
  period: string
  details: string[]
}

const education: Education[] = [
  {
    degree: 'M.Sc. Industrial Engineering and Management (International, Japanese)',
    institution: 'The Institute of Technology at Linköping University',
    period: '2005 — 2011',
    details: [
      'Focus on Computer Science and Industrial Marketing',
      'Included one year of Japanese language studies'
    ]
  },
  {
    degree: 'Exchange Studies',
    institution: '明治大学 / Meiji University, Tokyo',
    period: '2008 — 2009',
    details: [
      'Business and Management courses conducted in Japanese'
    ]
  }
]
---

<section class="px-8 py-4">
  <h2 class="text-2xl font-bold mb-6">EDUCATION</h2>
  {
    education.map((edu) => (
      <div class="mb-8">
        <div class="flex justify-between items-baseline mb-2">
          <h3 class="text-xl">
            {edu.degree}
          </h3>
          <span class="text-sm text-gray-600">{edu.period}</span>
        </div>
        <p class="text-red-500 mb-2">{edu.institution}</p>
        <ul class="list-disc ml-4">
          {edu.details.map((detail) => (
            <li class="text-sm mb-1">{detail}</li>
          ))}
        </ul>
      </div>
    ))
  }
</section> 